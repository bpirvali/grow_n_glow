---
const { href = "default" } = Astro.props;
const id = `link-${Math.random().toString(36).slice(2)}`; // unique per instance
---

<a id={id} href={href} class="inline-block bg-blue-400 text-white px-3 py-1 rounded">
  <slot />
</a>


<style>
    a {
        color: blue;
    }
</style>

<script is:inline define:vars={{ id }}>
{
  const el = document.getElementById(id);
  if (el) {
    el.addEventListener("click", (e) => {
      // e.preventDefault();
      console.log("clicked", el.href);
    });
  }
}
</script>
